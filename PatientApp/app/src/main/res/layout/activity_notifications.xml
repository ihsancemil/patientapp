<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.physhome.physhome.NotificationsActivity"
    android:background="@drawable/profile_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/calendar_info"
        android:padding="20dp"
        android:weightSum="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_left"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="0.33"
            android:id="@+id/calendart_left_iv"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January 2017"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.34"
            android:textColor="@color/colorPhyshome"
            android:id="@+id/calendar_date_tv"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_right"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="0.33"
            android:id="@+id/calendar_right_iv"
            />
    </LinearLayout>
    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_below="@+id/calendar_info"
        android:id="@+id/calendarView"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="250dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorPhyshome"
        app:compactCalendarCurrentDayBackgroundColor="@color/colorBlueMoreTransparent"
        app:compactCalendarMultiEventIndicatorColor="@color/colorLightGreen"
        app:compactCalendarBackgroundColor="@android:color/transparent"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/notification_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calendarView" />
</RelativeLayout>
