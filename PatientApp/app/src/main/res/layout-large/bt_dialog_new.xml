<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_save_bt_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2_new"
        android:layout_margin="20dp"
        android:background="@drawable/button_red"
        android:text="@string/save"
        android:textSize="22sp"
        android:padding="15dp"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limb_device"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/spinner2_rl"
        android:layout_alignLeft="@+id/button_save_bt_new"
        android:layout_alignStart="@+id/button_save_bt_new"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/selected_tv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_new"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textView_new"
        android:layout_toRightOf="@+id/textView_new"
        android:textColor="@color/colorAlerts"
        android:textStyle="bold"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/textView2_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chest_device"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView_new"
        android:layout_alignLeft="@+id/button_save_bt_new"
        android:layout_alignStart="@+id/button_save_bt_new"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/selected2_tv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2_new"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textView2_new"
        android:layout_toRightOf="@+id/textView2_new"
        android:textColor="@color/colorAlerts"
        android:textStyle="bold"
        android:textSize="22sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_bg"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/spinner1_rl"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignLeft="@+id/textView_new"
        android:layout_alignStart="@+id/textView_new"
        android:layout_alignRight="@+id/button_save_bt_new"
        android:layout_alignEnd="@+id/button_save_bt_new">

        <Spinner
            android:id="@+id/spinner_bt1_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/spinner_drop" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_bg"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/spinner1_rl"
        android:id="@+id/spinner2_rl"
        android:layout_marginBottom="15dp"
        android:layout_alignLeft="@+id/textView_new"
        android:layout_alignStart="@+id/textView_new"
        android:layout_alignRight="@+id/spinner1_rl"
        android:layout_alignEnd="@+id/spinner1_rl">

        <Spinner
            android:id="@+id/spinner_bt2_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/spinner_drop" />
    </RelativeLayout>


</RelativeLayout>